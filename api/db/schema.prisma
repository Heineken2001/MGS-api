model tags {
  id               BigInt            @id @default(autoincrement())
  type             String
  created_at       DateTime          @default(now())
  updated_at       DateTime          @default(now())
  tag_group        String?           @default("default")
  tag_translations tag_translations?
}

model tag_translations {
  id                BigInt  @id @default(autoincrement())
  tag_id            BigInt  @unique
  locale            String
  slug              String
  title             String
  short_description String?
  long_description  String?
  featured_image    String?
  formdata          Json?
  jsonschema        Json?
  uischema          Json?
  tags              tags    @relation(fields: [tag_id], references: [id])
}

model users {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  hashedPassword      String // <─┐
  salt                String // <─┼─ add these lines
  resetToken          String? // <─┤
  resetTokenExpiresAt DateTime? // <─┘
}

model categories {
  id            BigInt       @id @default(autoincrement())
  parent_id     BigInt?
  position      BigInt?
  is_searchable Boolean
  is_active     Boolean
  created_at    DateTime?
  updated_at    DateTime?
  type          String?
  parent        categories?  @relation("parentCategories", fields: [parent_id], references: [id])
  categories    categories[] @relation("parentCategories")
}

model menus {
  id         BigInt    @id @default(autoincrement())
  is_active  Boolean
  created_at DateTime?
  updated_at DateTime?
  position   Int?
}
